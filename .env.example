# Frontend Environment Variables
# For local development, create a .env.local file in the frontend directory with these values
# For Vercel deployment, set these in the Vercel dashboard

# API URL for the backend
# Local: NEXT_PUBLIC_API_URL=http://localhost:4000
# Production: NEXT_PUBLIC_API_URL=https://your-backend-url.com
NEXT_PUBLIC_API_URL=http://localhost:4000

# Backend Environment Variables
# Create a .env file in the backend directory with these values

# Frontend URL for CORS
# Local: FRONTEND_URL=http://localhost:3000
# Production: FRONTEND_URL=https://your-frontend-url.vercel.app
FRONTEND_URL=http://localhost:3000

# Port for backend server (optional, defaults to 4000)
PORT=4000

# Email Service Configuration (Nodemailer/SendGrid)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@cigar-order-hub.com

# QuickBooks Integration
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
QUICKBOOKS_REDIRECT_URI=http://localhost:4000/api/protected/quickbooks/callback
QUICKBOOKS_ENVIRONMENT=sandbox
# Production: QUICKBOOKS_ENVIRONMENT=production

# ============================================
# RBAC & Authentication Configuration
# ============================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Session Configuration
SESSION_TIMEOUT=1800000
# 30 minutes in milliseconds (30 * 60 * 1000)

# MFA Configuration
MFA_ISSUER=Cigar Order Hub
MFA_ENABLED=false
# Set to true to enable MFA for all users

# SSO Configuration (OAuth2)
SSO_ENABLED=false
SSO_CLIENT_ID=your-sso-client-id
SSO_CLIENT_SECRET=your-sso-client-secret
SSO_CALLBACK_URL=http://localhost:4000/api/auth/sso/callback
SSO_PROVIDER=google
# Options: google, microsoft, okta, auth0

# API Key Configuration
API_RATE_LIMIT=1000
# Default rate limit per hour for API keys

# Security Settings
BCRYPT_ROUNDS=12
# Higher is more secure but slower (10-12 recommended)

PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365
# How long to keep audit logs (in days)

# ============================================
# Shipping Integration Configuration
# ============================================

# UPS Integration
UPS_ENABLED=true
UPS_ACCOUNT_NUMBER=your_account
UPS_USER_ID=your_user_id
UPS_PASSWORD=your_password
UPS_METER_NUMBER=your_meter
UPS_API_URL=https://onlinetools.ups.com/ship/v1
UPS_TRACK_URL=https://onlinetools.ups.com/track/v1

# USPS Integration
USPS_ENABLED=true
USPS_USER_ID=your_user_id
USPS_API_KEY=your_api_key
USPS_API_URL=https://secure.shippingapis.com

# Encryption for Shipping Credentials
ENCRYPTION_KEY=your-encryption-key-change-in-production-use-32-chars
ENCRYPTION_ALGORITHM=aes-256-cbc

# ============================================
# Document & Contract Management
# ============================================

# Document Storage
DOCUMENT_STORAGE_PATH=/uploads/documents
MAX_DOCUMENT_SIZE=52428800
# Maximum document size in bytes (50MB default)

# Contract Storage
CONTRACT_STORAGE_PATH=/uploads/contracts
SIGNATURE_STORAGE_PATH=/uploads/signatures

# ============================================
# Mobile Field Sales Representative System
# ============================================

# Location Tracking
LOCATION_TRACKING_ENABLED=true
LOCATION_UPDATE_INTERVAL=30
# Interval in seconds for location updates
LOCATION_ACCURACY_THRESHOLD=50
# GPS accuracy threshold in meters
GEOFENCE_RADIUS=100
# Default geofence radius in meters
MAX_LOCATION_HISTORY=30
# Days to keep location history

# Mileage Configuration
MILEAGE_RATE=0.585
# IRS standard mileage rate (dollars per mile)
MILEAGE_TRACKING_ENABLED=true

# Photo Storage
PHOTO_STORAGE=local
# Options: local, s3, cloudinary
PHOTO_RETENTION_DAYS=365
# How long to keep photos (in days)
MAX_PHOTO_SIZE=10485760
# Maximum photo size in bytes (10MB)
PHOTO_UPLOAD_PATH=/uploads/photos
# Path for local photo storage

# S3 Configuration (if PHOTO_STORAGE=s3)
S3_BUCKET=cigar-order-hub-photos
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key

# Photo Approval Workflow
PHOTO_APPROVAL_REQUIRED=false
# Require manager approval for all photos

# Sales Rep Features
REP_CHECK_IN_REQUIRED=true
# Require daily check-in
REP_LOCATION_TRACKING=true
# Track rep locations
REP_PHOTO_CAPTURE=true
# Allow photo capture
REP_ORDER_PLACEMENT=true
# Allow reps to place orders
REP_MILEAGE_TRACKING=true
# Track mileage for reimbursement
